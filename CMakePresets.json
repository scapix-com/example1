{
  "version": 3,
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default build, Scapix Bridge disabled",
      "binaryDir": "${sourceDir}/build/${presetName}"
    },
    {
      "name": "java",
      "inherits": [ "default" ],
      "cacheVariables": {
        "SCAPIX_BRIDGE": "java"
      }
    },
    {
      "name": "objc",
      "inherits": [ "default" ],
      "cacheVariables": {
        "SCAPIX_BRIDGE": "objc"
      }
    },
    {
      "name": "objc-ios",
      "inherits": [ "objc" ],
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "iOS",
        "CMAKE_OSX_ARCHITECTURES": "arm64"
      }
    },
    {
      "name": "objc-tvos",
      "inherits": [ "objc" ],
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "tvOS",
        "CMAKE_OSX_ARCHITECTURES": "arm64"
      }
    },
    {
      "name": "objc-watchos",
      "inherits": [ "objc" ],
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "watchOS",
        "CMAKE_OSX_ARCHITECTURES": "arm64"
      }
    },
    {
      "name": "objc-visionos",
      "inherits": [ "objc" ],
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "visionOS",
        "CMAKE_OSX_ARCHITECTURES": "arm64"
      }
    },
    {
      "name": "python",
      "inherits": [ "default" ],
      "cacheVariables": {
        "SCAPIX_BRIDGE": "python"
      }
    },
    {
      "name": "js",
      "inherits": [ "default" ],
      "cacheVariables": {
        "SCAPIX_BRIDGE": "js",
        "CMAKE_TOOLCHAIN_FILE": "$env{EMSDK}/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake"
      }
    },
    {
      "name": "ninja-js",
      "inherits": [ "js" ],
      "generator": "Ninja"
    },
    {
      "name": "cs",
      "inherits": [ "default" ],
      "cacheVariables": {
        "SCAPIX_BRIDGE": "cs"
      }
    },
    {
      "name": "xcode",
      "inherits": [ "default" ],
      "generator": "Xcode"
    },
    {
      "name": "xcode-java",
      "inherits": [ "xcode", "java" ]
    },
    {
      "name": "xcode-objc",
      "inherits": [ "xcode", "objc" ]
    },
    {
      "name": "xcode-objc-ios",
      "inherits": [ "xcode", "objc-ios" ]
    },
    {
      "name": "xcode-objc-tvos",
      "inherits": [ "xcode", "objc-tvos" ]
    },
    {
      "name": "xcode-objc-watchos",
      "inherits": [ "xcode", "objc-watchos" ]
    },
    {
      "name": "xcode-objc-visionos",
      "inherits": [ "xcode", "objc-visionos" ]
    },
    {
      "name": "xcode-python",
      "inherits": [ "xcode", "python" ]
    },
    {
      "name": "xcode-cs",
      "inherits": [ "xcode", "cs" ]
    },
    {
      "name": "vs2019",
      "inherits": [ "default" ],
      "generator": "Visual Studio 16 2019"
    },
    {
      "name": "vs2019-clang",
      "inherits": [ "vs2019" ],
      "toolset": "clangcl"
    },
    {
      "name": "vs2019-java",
      "inherits": [ "vs2019", "java" ]
    },
    {
      "name": "vs2019-clang-java",
      "inherits": [ "vs2019-clang", "java" ]
    },
    {
      "name": "vs2019-python",
      "inherits": [ "vs2019", "python" ]
    },
    {
      "name": "vs2019-clang-python",
      "inherits": [ "vs2019-clang", "python" ]
    },
    {
      "name": "vs2019-cs",
      "inherits": [ "vs2019", "cs" ]
    },
    {
      "name": "vs2022",
      "inherits": [ "default" ],
      "generator": "Visual Studio 17 2022"
    },
    {
      "name": "vs2022-clang",
      "inherits": [ "vs2022" ],
      "toolset": "clangcl"
    },
    {
      "name": "vs2022-java",
      "inherits": [ "vs2022", "java" ]
    },
    {
      "name": "vs2022-clang-java",
      "inherits": [ "vs2022-clang", "java" ]
    },
    {
      "name": "vs2022-python",
      "inherits": [ "vs2022", "python" ]
    },
    {
      "name": "vs2022-clang-python",
      "inherits": [ "vs2022-clang", "python" ]
    },
    {
      "name": "vs2022-cs",
      "inherits": [ "vs2022", "cs" ]
    }
  ]
}
